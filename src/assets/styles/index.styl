header
  position fixed
  top 0
  left 0
  z-index 999
  width 100%
  height 68px
  background-image url('../images/indexlogo.png')
#map
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background #08304a !important
#link-to
  position absolute
  top 90px
  right 0
  z-index 10
  width 470px
  padding 20px
  border-radius 10px
  background rgba(45, 179, 152, 0.2)
  color #fff
  font-size 14px
  .child-system, .theme-system
    width 100%
    display flex
    flex-wrap nowrap
    justify-content space-between
    .button
      // float left
      padding 5px 10px
      margin-right 5px
      border 1px solid #2db398
      border-radius 5px
      transition background 0.2s ease-in-out
      cursor pointer
      &:hover
        background-color #2db398
      a
        color #fff
        text-decoration none
  .title
    position relative
    top 10px
    margin-bottom 20px
    font-size 18px
    color #2db398
    font-weight 600
    line-height 30px